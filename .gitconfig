	# git config user.email REPO_SPECIFIC_EMAIL
[core]
	excludesfile = ~/.gitignore
	autocrlf = input
	editor = emacs -nw
[diff]
	renames = copy
[push]
	default = simple
[mergetool]
	keepBackup = true
[alias]
	l = log --pretty=format:'%h : %an, %ar : %s' --graph
	pick = cherry-pick
#	up = !"git fetch origin -v; git fetch upstream -v; git merge upstream/master"
	up = !"git pull origin ; git fetch upstream ; git rebase upstream/master"
	undo = reset --soft 'HEAD^'
	ignore = update-index --assume-unchanged
	unignore = update-index --no-assume-unchanged
	ignored = !git ls-files -v | grep "^[[:lower:]]"
	cut = checkout -b
	sith = push --force
	nuke = clean -fdx -e project/Build.scala -e project/build.properties -e .ensime -e props.conf
[color]
	branch = auto
	diff = auto
	status = auto
	interactive = auto
	ui = auto
[apply]
	whitespace = warn
