!------------------------------------------------------------------------------!
! defaults !
!------------------------------------------------------------------------------!
Xft.antialias: 1
Xft.dpi: 96
Xft.hinting: 1
Xft.hintstyle: hintfull
Xft.lcdfilter: lcddefault
Xft.rgba: rgb
Xcursor.size: 18
Xcursor.theme: Human
Xcursor.theme_core: true

!------------------------------------------------------------------------------!
! rxvt unicode !
!------------------------------------------------------------------------------!
URxvt*iconName: terminal
URxvt*depth: 32
URxvt*geometry: 80x45
URxvt*letterSpace: -1
URxvt*cursorUnderline: true
URxvt*saveLines: 65535
URxvt*scrollBar: true
URxvt*scrollBar_right: true
URxvt*scrollBar_floating: true
URxvt*scrollstyle: plain
URxvt*font: xft:Inconsolata:size=16,xft:PragmataProPowerline:size=18,xft:Envy Code R:size=18
URxvt*boldFont: xft:Inconsolata:size=16,xft:PragmataProPowerline:size=18,xft:Envy Code R:size=18
URxvt.fading: 0
!URxvt.perl-lib: /home/fommil/.urxvt
URxvt.perl-ext-common: default,matcher,tabbedex,clipboard
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
URxvt.tabbed.autohide: true
URxvt.tabbed.no-tabbedex-keys: true
URxvt.keysym.Shift-Left: perl:tabbedex:prev_tab
URxvt.keysym.Shift-Right: perl:tabbedex:next_tab
URxvt.keysym.Control-t: perl:tabbedex:new_tab
URxvt.clipboard.autocopy: true
!URxvt.keysym.Control-v:   perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.urgentOnBell: true

!! To be portable, any colour scheme should roughly match the ANSI colour codes
!! http://en.wikipedia.org/wiki/ANSI_escape_code#Colors
!! which cycle through: black, red, green, yellow, blue, magenta, cyan, white
!! and repeat for the "bright" versions.

!! Mini-darcula
URxvt.background:  #2B2B2B
URxvt.foreground:  #a9b7c6
URxvt.color0:      #2B2B2B
URxvt.color1:      #cc7832
URxvt.color2:      #629755
URxvt.color3:      #fec66c
URxvt.color4:      #5859b7
URxvt.color5:      #9876aa
URxvt.color6:      #259185
URxvt.color7:      #a9b7c6
! the lighter/stronger variants
URxvt.color8:      #4d4d4d
URxvt.color9:      #de7620
URxvt.color10:     #59a547
URxvt.color11:     #fec64c
URxvt.color12:     #4041cf
URxvt.color13:     #9e64bc
URxvt.color14:     #179f90
URxvt.color15:     #ced6de


URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg:    0
URxvt.tabbed.tab-bg:    2
