# Sam's universal GNU bash ~/.aliases

# SHOULD CHECK FOR GNU VERSIONS BEFORE APPLYING THESE ALIASES
if [ `ls --help 2>/dev/null | grep -c gnu` -gt 0 ] ; then
    alias ll="ls -lkh"
    alias la="ls -A"
    alias ls="ls --color=auto -I lost+found"
elif [ `uname` = "FreeBSD" ] || [ `uname` = "Darwin" ] ; then
    alias ll="ls -lkh"
    alias la="ls -A"
    alias ls="ls -G"
else
    alias ll="ls -l"
    alias la="ls -A"
fi
if [ `grep --help 2>/dev/null | grep -c gnu` -gt 0 ] &&
    [ `grep --help 2>/dev/null | grep -c '\-\-color'` -gt 0 ] ; then
    alias grep="grep --color=auto"
fi
if [ `uname` = "SunOS" ] &&
    [ `du --help 2>/dev/null | grep -c gnu` = 0 ] ; then
    alias du="du -s"
else
    alias du="du -sh"
    alias df="df -h"
fi

alias cd..="cd .."
alias cp="cp -i"
alias mv="mv -i"
alias rm="rm -i"

alias nano="nano -w"

alias please="sudo"
alias fuck="rm -rf"
alias wtf="ps -ef | grep java"

alias markdown="hsmarkdown"

alias open="xdg-open"
alias volume="pavucontrol"

alias ensime="ctags -Re . & sbt clean ';ensimeConfig ;ensimeConfigProject'"
alias ensime-test-compile="ctags -Re . & sbt clean ';ensimeConfig ;ensimeConfigProject ;test:compile'"
alias ensime-test-it-compile="ctags -Re . & sbt clean ';ensimeConfig ;ensimeConfigProject ;test:compile ;it:compile'"
